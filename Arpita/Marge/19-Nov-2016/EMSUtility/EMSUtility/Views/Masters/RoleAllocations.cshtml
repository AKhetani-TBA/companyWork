                    <div class="form-group">
                        <div class="input-group date" id="ceaseDate">
                            @Html.TextBoxFor(roleAllocation => roleAllocation.CeaseDate, new { @id = "txtCeaseDate", @class = "validate[required,funcCall[validateTest]] form-control" })

@using (Html.BeginForm("AddTechnology", "Masters", FormMethod.Post, new { @class = "form-horizontal", @id = "AddTechnologyForm" }))
{
    <div class="boxMainHldr marginBottom_30 cf">
        <div class="boxBody">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputEmail3">Technology</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(technology => technology.TechName, new { @maxlength = "22", @class = "validate[required] form-control" })
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputEmail3">WEF</label>
                        <div class="col-sm-8">
                            <div class="input-group date" id="createDate">
                                @Html.TextBoxFor(technology => technology.CreatedDate, new { @id = "txtCreateDate", @class = "validate[required,funcCall[validateTest]] form-control" })<span class="input-group-addon"><i class="fa fa-calendar"></i></span>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4" style="margin-top:2px">
                    <button class="btn btn-primary" value="submit" id="btnAddTechnology" style="margin-left:10px">Save</button>
                    <button class="btn btn-default" type="button" id="btnTechCancel" style="margin-left:10px">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("UpdateTechnology", "Masters", FormMethod.Post, new { @id = "UpdateTechnologyForm" }))
{
    <div class="boxMainHldr cf">
        <div class="boxTitle">
            <div class="row cf">
                <div class="col-lg-5 col-md-5 col-sm-5">
                    <i class="fa fa-users"></i>
                    Technology Details
                </div>
                <div class="col-lg-1 col-md-1 col-sm-1 text-right">
                    <label style="height: 28px;font-size:14px;font-weight:normal;margin-left:35px">Search:</label>
                </div>
                <div class="col-lg-1 col-md-1 col-sm-1 text-right">
                    <input type="search" id="txtSearch" style="height: 28px;width: 150%;margin-top:5px" />
                </div>
                <div class="col-lg-3 col-md-3 col-sm-3 text-right">
                    <label style="height: 28px;font-size:14px;font-weight:normal;margin-left:65px">Select Option:</label>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 text-right">
                    <select id="htmddl" style="width:60%; height: 28px; font-size:14px;margin-top: 4px;">
                        <option value="1">Active</option>
                        <option value="0">All</option>
                        <option value="2">Deleted</option>
                    </select>
                </div>
            </div>
        </div> 
        <div class="boxBody">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="table-responsive">
                        <table id="tblTechnology" class="table table-striped table-bordered" cellspacing="0" data-page-length='5'>
                            <thead>
                                <tr>
                                    <th style="width:15px">Technology Name</th>
                                    <th style="width:15px">Created By</th>
                                    <th style="width:15px">WEF</th>
                                    <th style="width:15px">Modify By</th>
                                    <th style="width:15px">Modify Date</th>
                                    <th style="width:15px">Cease Date</th>
                                    <th style="width:15px">Edit</th>
                                    <th style="width:15px">Del</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    @Html.HiddenFor(technology => technology.TechId, new { @id = "hdnTechId" })

    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                    <h4 class="modal-title custom_align" id="Heading">Edit Your Technology Detail</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Technology Name</label>
                        @Html.TextBoxFor(technology => technology.TechName, new { @id = "lblTechNameToEdit", @class = "validate[required] form-control" })
                    </div>
                </div>
                <div class="modal-footer ">
                    <button id="btnUpdateTechnology" type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
                </div>
            </div>
        </div>        
    </div>

    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                    <h4 class="modal-title custom_align" id="Heading">Delete the Department details</h4>
                </div>

                <div class="modal-body">
                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record? If YES then select Cease date.</div>
                    <div class="form-group">
                        <div class="input-group date" id="ceaseDate">
                            @Html.TextBoxFor(technology => technology.CeaseDate, new { @id = "txtCeaseDate", @class = "validate[required,funcCall[validateTest]] form-control" })
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer ">
                    <button id="btnDeleteYes" type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                </div>

            </div>
        </div>
    </div>

}


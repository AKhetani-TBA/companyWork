@model EMS_BASE.Models.Department
@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
}

<style>
    .errorMsg {
        color: red;
    }

    .successMsg {
        color: green;
    }
</style>

@*<link href="@Url.Content("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")" rel="stylesheet" />*@
<link href="@Url.Content("https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css")" rel="stylesheet" />

@*<script src="@Url.Content("~/Scripts/jquery-1.12.3.js")"></script>*@

@Html.Label("", (string)TempData["Message"], new { @id = "lblValidateUserMessage", @class = "successMsg" })
@Html.Label("", (string)TempData["ErrorMessage"], new { @id = "lblValidateUserMessage", @class = "errorMsg" })


@using (Html.BeginForm("DepartmentAllocation", "Masters", FormMethod.Get, new { @class = "form-horizontal", @id = "DepartmentAllocationForm" }))
{
    <div class="panel with-nav-tabs panel-default">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab">Department Master</a></li>
                <li>
                    <a href='@Url.Action("DepartmentAllocation")' data-toggle="tab" id="DeptAlloc">
                        <span>Department Allocation</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
}

@using (Html.BeginForm("AddDepartmentDetails", "Masters", FormMethod.Post, new { @class = "form-horizontal", @id = "AddDepartmentForm" }))
{
    <div class="boxMainHldr marginBottom_30 cf">

        @*<div class="boxTitle">
            <i class="fa fa-users"></i> Department Master
        </div>*@

        <div class="boxBody">
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputEmail3">Department</label>
                        <div class="col-sm-8">
                            @Html.TextBoxFor(departmentDetails => departmentDetails.DeptName)
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-4">
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputEmail3">Create Date</label>
                        <div class="col-sm-8">
                            <div class="input-group date" id="createDate">
                                @Html.TextBoxFor(departmentDetails => departmentDetails.CreatedDate, new { id = "txtCreateDate" })
                                @*<input type="text" class="form-control" />*@<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="boxFooter">
            <button class="btn btn-primary" value="submit" id="btnAddDepartment">Save</button>
            <button class="btn btn-default" type="button" id="btnDeptCancel">Cancel</button>
        </div>

    </div>
}

@using (Html.BeginForm("UpdateDepartmentDetails", "Masters", FormMethod.Post, new { @id = "UpdateDepartmentForm" }))
{
    <div class="boxMainHldr cf">
        <div class="boxTitle"><i class="fa fa-users"></i> Department Details</div>
        <div class="boxBody">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="table-responsive">
                        <table id="tblDepartmentDetails" class="table table-striped table-bordered" cellspacing="0" data-page-length='5'>
                            <thead>
                                <tr>
                                    <th>Department Name</th>
                                    <th>Created By</th>
                                    <th>Created Date</th>
                                    <th>Modify By</th>
                                    <th>Modify Date</th>
                                    <th>Last Action</th>
                                    <th>Cease Date</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.HiddenFor(departmentDetails => departmentDetails.DeptId, new { @id = "hdnDeptId" })

    <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                    <h4 class="modal-title custom_align" id="Heading">Edit Your Department Detail</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.TextBoxFor(departmentDetails => departmentDetails.DeptName, new { @id = "lblDeptNameToEdit" })
                    </div>
                </div>
                <div class="modal-footer ">
                    <button id="btnUpdateDepartment" type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                    <h4 class="modal-title custom_align" id="Heading">Delete the role details</h4>
                </div>

                <div class="modal-body">
                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record? If YES then select cease date.</div>
                    <div class="form-group">
                        <div class="input-group date" id="ceaseDate">
                            @Html.TextBoxFor(departmentDetails => departmentDetails.CeaseDate, new { @id = "txtCeaseDate" })
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>

                <div class="modal-footer ">
                    <button id="btnDeleteYes" type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                </div>

            </div>
        </div>
    </div>

}


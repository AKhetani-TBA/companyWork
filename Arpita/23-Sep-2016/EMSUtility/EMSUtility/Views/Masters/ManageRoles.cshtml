                <table id="tblRoleDetails" class="table table-striped table-bordered" cellspacing="0" data-page-length='5'>
                    <thead>
                        <tr>
                            <th>Role Id</th>
                            <th>Role Name</th>
                            <th>Created By</th>
                            <th>Created Date</th>
                            <th>Modify By</th>

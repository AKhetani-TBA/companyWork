<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <h2 class="topHeading"> Role Details </h2>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                @*@foreach(var role in Model )
                    {
                        @Html.Label(role.RoleId + role.RoleName )

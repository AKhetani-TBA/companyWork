<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="boxMainHldr cf">
            <div class="boxTitle"><i class="fa fa-users"></i> Employees Personal Details</div>
            @using (Html.BeginForm("AddEmployeeBasicDetails", "Employee", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="boxBody">
                    
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            @Html.LabelFor(empbasic => empbasic.FirstName)
                        </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(empbasic => empbasic.FirstName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            @Html.LabelFor(empbasic => empbasic.MiddleName)
                        </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(empbasic => empbasic.MiddleName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            @Html.LabelFor(empbasic => empbasic.LastName)
                        </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(empbasic => empbasic.LastName)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="inputEmail3">
                            @Html.LabelFor(empbasic => empbasic.DateOfJoining)
                        </label>
                        <div class="col-sm-10">
                            <div class="input-group date" id="birthDate">
                                @Html.TextBoxFor(empbasic => empbasic.DateOfJoining)<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            @Html.LabelFor(empbasic => empbasic.WorkEmailId)
                        </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(empbasic => empbasic.WorkEmailId)
                        </div>
                    </div>
                </div>
                <div class="boxFooter">
                    <button class="btn btn-primary" value="submit" type="submit">Save</button>
                    <button class="btn btn-default" type="button">Cancel</button>
                </div>
            }
        </div>
        <br />
    </div>
</div>
